<thlogic>
    <attr sel="#headId"
          th:replace="~{fragments/head :: headFragment}"/>

    <attr sel="#game-title"
          th:text="#{game.title}"/>

    <attr sel="#enter-guess"
          th:text="#{enter.guess}"/>

    <attr sel="#submit"
          th:value="#{submit}"/>

    <attr sel="#main-message"
          th:text="${__${T(academy.programming.util.AttributeNames).MAIN_MESSAGE}__}"/>

    <attr sel="#result-message"
          th:text="${__${T(academy.programming.util.AttributeNames).RESULT_MESSAGE}__}"/>

    <attr sel="#game-form"
          th:action="@{__${T(academy.programming.util.Mappings).PLAY}__}"/>

    <attr sel="#footerId"
          th:replace="~{fragments/footer :: footerFragment}"/>

</thlogic>